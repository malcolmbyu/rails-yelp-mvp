<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Cat.</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= link_to restaurant.name, restaurant %></td>
      <td><%= restaurant.address %></td>
      <!-- <p>Rating: <%#= restaurant.rating %> </p> -->
      <td> <%= restaurant.category %></td>
      <td><%= link_to 'Make a Review', new_restaurant_review_path(restaurant.id), class: "btn btn-primary" %></td>

    </tr>
    <% end %>
  </tbody>
</table>


